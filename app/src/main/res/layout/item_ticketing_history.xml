<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/movie_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="2024. 3. 2" />

    <View
        android:id="@+id/date_time_divider_view"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/movie_date_text_view"
        app:layout_constraintBottom_toBottomOf="@id/movie_date_text_view"
        app:layout_constraintStart_toEndOf="@id/movie_date_text_view"
        android:background="#D0D0D0"
        android:layout_marginStart="4dp" />

    <TextView
        android:id="@+id/movie_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/date_time_divider_view"
        tools:text="17:00" />

    <TextView
        android:id="@+id/movie_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/movie_date_text_view"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="해리 포터와 마법사의 돌"/>

</androidx.constraintlayout.widget.ConstraintLayout>
