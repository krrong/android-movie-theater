<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="reservation"
            type="woowacourse.movie.presentation.model.item.Reservation" />

        <variable
            name="ticket"
            type="woowacourse.movie.presentation.model.Ticket" />

        <variable
            name="ticketPrice"
            type="woowacourse.movie.presentation.model.TicketPrice" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.activities.ticketingresult.TicketingResultActivity">

        <View
            android:id="@+id/ticketing_header_container"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/ticketing_header_color"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100dp"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:lineHeight="20dp"
            android:text="@string/ticketing_cancel_info"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@id/ticketing_header_container"
            app:layout_constraintEnd_toEndOf="@id/ticketing_header_container"
            app:layout_constraintStart_toStartOf="@id/ticketing_header_container" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="@{reservation.movieTitle}"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ticketing_header_container"
            tools:text="해리 포터와 마법사의 돌" />

        <TextView
            android:id="@+id/date_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@{@string/book_date_time(reservation.movieDate.year, reservation.movieDate.month, reservation.movieDate.day, reservation.movieTime.hour, reservation.movieTime.min)}"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_tv"
            tools:text="2024.3.1" />

        <TextView
            android:id="@+id/regular_count_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:gravity="center|end"
            android:text="@{@string/regular_count(ticket.count)}"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/ticket_count_and_seat_divider"
            app:layout_constraintEnd_toStartOf="@+id/seats_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ticket_count_and_seat_divider"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="일반 1명" />

        <View
            android:id="@+id/ticket_count_and_seat_divider"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/seats_tv"
            app:layout_constraintEnd_toStartOf="@id/seats_tv"
            app:layout_constraintStart_toEndOf="@id/regular_count_tv"
            app:layout_constraintTop_toTopOf="@id/seats_tv" />

        <TextView
            android:id="@+id/seats_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:gravity="center"
            android:text="@{String.valueOf(reservation.seats.sorted())}"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/pay_result_tv"
            app:layout_constraintEnd_toStartOf="@id/seat_and_theater_divider"
            app:layout_constraintStart_toEndOf="@id/regular_count_tv"
            app:layout_constraintTop_toBottomOf="@id/date_tv"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="B3" />

        <View
            android:id="@+id/seat_and_theater_divider"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/seats_tv"
            app:layout_constraintEnd_toEndOf="@id/theater_name_tv"
            app:layout_constraintStart_toEndOf="@id/seats_tv"
            app:layout_constraintTop_toTopOf="@id/seats_tv" />

        <TextView
            android:id="@+id/theater_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:ellipsize="end"
            android:gravity="center|start"
            android:maxLines="1"
            android:text="@{reservation.theaterName}"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/seats_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/seat_and_theater_divider"
            app:layout_constraintTop_toTopOf="@id/seats_tv"
            tools:text="선릉 극장" />

        <TextView
            android:id="@+id/pay_result_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@{@string/movie_pay_result(ticketPrice.amount)}"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seats_tv"
            tools:text="13,000원 (현장 결제)" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>